<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lincy_ellermeijer.doggywalk">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:label="@string/title_activity_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RouteListActivity"
            android:label="@string/activity_showroutes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlantListActivity"
            android:label="@string/activity_showplants"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MenuActivity"
            android:label="@string/menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddPlantActivity"
            android:label="@string/title_activity_add_plant"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddRouteActivity"
            android:label="@string/title_activity_add_route"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
